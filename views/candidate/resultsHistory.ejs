<%- include('../partials/header') %>

<div class="container mx-auto py-10">
  <h1 class="text-3xl font-bold text-blue-700 mb-6">Hello, <%= user.name %> - Your Test Results</h1>

  <% if(results.length===0){ %>
    <p class="text-gray-700">You have not taken any tests yet.</p>
  <% } else { %>
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
      <thead class="bg-blue-700 text-white">
        <tr>
          <th class="py-3 px-6 text-left">Test Title</th>
          <th class="py-3 px-6 text-left">Obtained Marks</th>
          <th class="py-3 px-6 text-left">Status</th>
          <th class="py-3 px-6 text-left">Date</th>
          <th class="py-3 px-6 text-left">Action</th>
        </tr>
      </thead>
      <tbody>
        <% results.forEach(result => { %>
          <tr class="border-b">
            <td class="py-3 px-6"><%= result.Test.title %></td>
            <td class="py-3 px-6"><%= result.obtainedMarks %> / <%= result.Test.totalMarks %></td>
            <td class="py-3 px-6"><%= result.status %></td>
            <td class="py-3 px-6"><%= result.createdAt.toDateString() %></td>
            <td class="py-3 px-6">
              <a href="/candidate/results/<%= result.id %>" class="text-blue-600 hover:underline">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>

<%- include('../partials/footer') %>
