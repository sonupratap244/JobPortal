<%- include('../partials/header') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Reset Password</title>
  <style>
    body {
      background: linear-gradient(to right, #e0f2ff, #f5f9ff);
      font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
    }

    .reset-container {
      background: #ffffff;
      padding: 30px;
      width: 100%;
      max-width: 400px;
      border-radius: 10px;
      box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
      border: 1px solid #e5e7eb;
      transition: transform 0.2s ease;
    }

    .reset-container:hover {
      transform: translateY(-3px);
    }

    h2 {
      text-align: center;
      color: #1e40af;
      font-weight: 700;
      margin-bottom: 25px;
    }

    input[type="password"] {
      width: 100%;
      padding: 12px;
      margin-bottom: 20px;
      border-radius: 6px;
      border: 1px solid #cbd5e1;
      font-size: 15px;
      outline: none;
      transition: border-color 0.2s ease, box-shadow 0.2s ease;
    }

    input[type="password"]:focus {
      border-color: #3b82f6;
      box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
    }

    button {
      width: 100%;
      padding: 12px;
      background-color: #16a34a;
      border: none;
      color: white;
      font-size: 16px;
      font-weight: 600;
      border-radius: 6px;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    button:hover {
      background-color: #15803d;
    }

    .back-link {
      display: block;
      text-align: center;
      margin-top: 15px;
      font-size: 14px;
      color: #1e40af;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .back-link:hover {
      color: #2563eb;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="reset-container">
    <h2>Reset Password</h2>

    <% if (typeof error !== "undefined" && error) { %>
      <div style="color: #dc2626; text-align:center; margin-bottom:10px;">
        <%= error %>
      </div>
    <% } %>

    <% if (typeof success !== "undefined" && success) { %>
      <div style="color: #16a34a; text-align:center; margin-bottom:10px;">
        <%= success %>
      </div>
    <% } %>

    <form method="POST" action="/auth/reset-password/<%= token %>">
      <input type="password" name="password" placeholder="Enter New Password" required />
      <button type="submit">Update Password</button>
    </form>

    <a href="/auth/login" class="back-link">‚Üê Back to Login</a>
  </div>
</body>
</html>
