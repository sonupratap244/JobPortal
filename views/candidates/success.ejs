<%- include('../partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-gradient-to-br from-blue-50 via-white to-green-50 p-6">
  <div class="relative bg-white/80 backdrop-blur-md border border-gray-200 shadow-2xl rounded-2xl p-10 w-full max-w-lg text-center animate-fadeIn">
    
    <!-- Success Icon -->
    <div class="flex justify-center mb-6">
      <div class="bg-green-100 p-5 rounded-full shadow-inner animate-bounce">
        <i class="fas fa-check text-green-600 text-4xl"></i>
      </div>
    </div>

    <!-- Message -->
    <h2 class="text-3xl font-extrabold text-green-700 mb-3">Application Submitted!</h2>
    <p class="text-gray-700 text-lg mb-2">
      Hi <span class="font-semibold text-blue-600"><%= name %></span>, your application has been successfully received.
    </p>
    <p class="text-gray-600 mb-6">
      A confirmation email has been sent to your registered email address.
    </p>

    <!-- Button -->
    <a href="/auth/profile"
       class="inline-flex items-center justify-center bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-8 py-3 rounded-lg font-semibold shadow-md transition-transform transform hover:scale-105">
      <i class="fas fa-user-circle mr-2"></i> Go to Profile
    </a>

    <!-- Decorative Bottom Line -->
    <div class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-blue-400 via-green-400 to-blue-400 rounded-b-2xl"></div>
  </div>
</div>

<%- include('../partials/footer') %>

<!-- Animation -->
<style>
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn {
  animation: fadeIn 0.8s ease-out;
}
</style>
