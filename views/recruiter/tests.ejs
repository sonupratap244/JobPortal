<%- include('../partials/header') %>
<%- include('../partials/sidebar', { user }) %>

<!-- Responsive Page Wrapper -->
<div class="p-4 sm:p-6 mt-14 lg:p-8 lg:ml-64 min-h-screen bg-gray-100 transition-all duration-300">

  <!-- Page Header -->
  <div class="flex flex-col sm:flex-row sm:justify-between sm:items-center mb-8 border-b pb-4 gap-4">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-800 flex items-center gap-3">
      <i class="fa-solid fa-file-lines text-blue-600"></i>
      Manage Tests
    </h1>

    <a href="/recruiter/tests/create" 
       class="flex items-center gap-2 bg-blue-600 hover:bg-blue-700 text-white font-medium px-5 py-2 rounded-xl shadow-md transition w-full sm:w-auto justify-center"
       title="Create a new test">
        Create Test
    </a>
  </div>

  <!-- Tests Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">

    <% tests.forEach(test => { %>
      <div class="bg-white rounded-2xl shadow-sm hover:shadow-xl transition transform hover:-translate-y-1 border border-gray-100">
        <div class="p-6 flex flex-col justify-between h-full">
          
          <!-- Test Info -->
          <div>
            <h2 class="text-lg sm:text-xl font-semibold text-gray-800 mb-2 flex items-center gap-2" title="Test Title">
              <i class="fa-solid fa-clipboard-check text-blue-500"></i>
              <%= test.title %>
            </h2>

            <p class="text-gray-600 text-sm mb-4 line-clamp-2" title="Description">
              <%= test.description %>
            </p>

            <div class="flex justify-between text-gray-500 text-sm mb-4">
              <span class="flex items-center gap-1" title="Duration">
                <i class="fa-regular fa-clock text-blue-500"></i> <%= test.durationMinutes %> mins
              </span>

              <span class="flex items-center gap-1" title="Total Marks">
                <i class="fa-solid fa-medal text-yellow-500"></i> <%= test.totalMarks %> marks
              </span>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex flex-wrap justify-between items-center gap-3 border-t pt-3">

            <a href="/recruiter/test/<%= test.id %>/add-questions" 
               class="flex items-center gap-1 text-blue-600 hover:text-blue-800 text-sm font-medium"
               title="Add questions to this test">
              <i class="fa-solid fa-circle-plus"></i> Add Qs
            </a>

            <div class="flex items-center gap-2">

              <!-- Edit -->
              <a href="/recruiter/test/<%= test.id %>/edit" 
                 class="bg-yellow-400 hover:bg-yellow-500 text-white text-sm px-3 py-1.5 rounded-lg shadow flex items-center gap-1"
                 title="Edit this test">
                <i class="fa-solid fa-pen-to-square"></i>
              </a>

              <!-- Delete -->
              <form action="/recruiter/test/<%= test.id %>?_method=DELETE" method="POST" class="inline delete-form">
                <button type="submit"
                        class="bg-red-600 hover:bg-red-700 text-white text-sm px-3 py-1.5 rounded-lg shadow flex items-center gap-1"
                        title="Delete this test">
                  <i class="fa-solid fa-trash-can"></i>
                </button>
              </form>

              <!-- Results -->
              <a href="/recruiter/test/<%= test.id %>/results"
                 class="bg-green-600 hover:bg-green-700 text-white text-sm px-3 py-1.5 rounded-lg shadow flex items-center gap-1"
                 title="View results">
                <i class="fa-solid fa-chart-line"></i>
              </a>

              <!-- Review -->
              <a href="/recruiter/test/<%= test.id %>/review"
                 class="bg-blue-600 hover:bg-blue-700 text-white text-sm px-3 py-1.5 rounded-lg shadow flex items-center gap-1"
                 title="Review test details">
                <i class="fa-solid fa-eye"></i>
              </a>

            </div>
          </div>

        </div>
      </div>
    <% }) %>

  </div>

  <% if (tests.length === 0) { %>
    <div class="text-center mt-20 text-gray-500">
      <i class="fa-solid fa-folder-open text-5xl mb-4"></i>
      <p class="text-lg">No tests created yet. Click “Create Test” to get started!</p>
    </div>
  <% } %>
</div>

<!-- Toast Script -->
<script>
  function showToast(message, type = 'success') {
    const toast = document.createElement('div');
    toast.className = `fixed bottom-6 right-6 px-5 py-3 rounded-lg text-white shadow-lg transition-opacity duration-500 opacity-0 z-50 ${
      type === 'success' ? 'bg-green-600' : 'bg-red-600'
    }`;
    toast.innerText = message;
    document.body.appendChild(toast);
    setTimeout(() => toast.classList.remove('opacity-0'), 50);
    setTimeout(() => {
      toast.classList.add('opacity-0');
      setTimeout(() => toast.remove(), 500);
    }, 3000);
  }

  document.querySelectorAll('.delete-form').forEach(form => {
    form.addEventListener('submit', e => {
      if (!confirm('Are you sure you want to delete this test?')) {
        e.preventDefault();
        return;
      }
      showToast(' Test deleted successfully!', 'success');
    });
  });
</script>
