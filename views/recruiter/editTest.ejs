<%- include('../partials/header') %>
<%- include('../partials/sidebar', { user: user }) %>

<!-- Responsive Wrapper -->
<div class="p-4 sm:p-6 mt-10 lg:p-8 lg:ml-64 bg-gray-50 min-h-screen transition-all duration-300">

  <div class="max-w-3xl mx-auto bg-white p-6 sm:p-8 rounded-2xl shadow">

    <h2 class="text-xl sm:text-2xl font-bold text-blue-700 mb-6">
      Edit Test: <%= test.title %>
    </h2>

    <form action="/recruiter/test/<%= test.id %>/edit" method="POST" class="space-y-4">

      <div>
        <label class="block text-gray-700 font-semibold mb-1">Title</label>
        <input 
          type="text" 
          name="title" 
          value="<%= test.title %>" 
          required
          class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>

      <div>
        <label class="block text-gray-700 font-semibold mb-1">Description</label>
        <textarea 
          name="description" 
          required
          class="w-full border border-gray-300 px-3 py-2 rounded-lg h-24 sm:h-32 focus:outline-none focus:ring-2 focus:ring-blue-500"
        ><%= test.description %></textarea>
      </div>

      <!-- Responsive Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Total Marks</label>
          <input 
            type="number" 
            name="totalMarks" 
            value="<%= test.totalMarks %>" 
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Passing Marks</label>
          <input 
            type="number" 
            name="passingMarks" 
            value="<%= test.passingMarks %>" 
            required
            class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
        </div>

      </div>

      <div>
        <label class="block text-gray-700 font-semibold mb-1">Duration (Minutes)</label>
        <input 
          type="number" 
          name="durationMinutes" 
          value="<%= test.durationMinutes %>" 
          required
          class="w-full border border-gray-300 px-3 py-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
      </div>

      <!-- Buttons: right on large, center on mobile -->
      <div class="flex flex-col sm:flex-row sm:justify-end sm:space-x-4 mt-4 gap-3">

        <a 
          href="/recruiter/tests" 
          class="px-4 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 text-center"
        >
          Cancel
        </a>

        <button 
          type="submit" 
          class="px-6 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 w-full sm:w-auto"
        >
          Update Test
        </button>

      </div>

    </form>
  </div>
</div>
