<%- include('../partials/header') %>
<%- include('../partials/sidebar', { user }) %>

<div class="p-4 md:p-8 mt-14 bg-gray-50 min-h-screen md:ml-64 transition-all duration-300">
  <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow p-4 sm:p-8">
    
    <h2 class="text-2xl sm:text-3xl font-bold mb-6 text-blue-700">
      Edit Question for: <%= test.title %>
    </h2>

    <form action="/recruiter/test/<%= test.id %>/question/<%= question.id %>/update" method="POST" class="space-y-4">

      <!-- Question text -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">Question Text</label>
        <textarea name="text" class="w-full border rounded-lg px-3 py-2" required><%= question.text %></textarea>
      </div>

      <!-- Question Type -->
      <div>
        <label class="block text-gray-700 font-semibold mb-1">Question Type</label>
        <select id="questionType" name="type" class="w-full border rounded-lg px-3 py-2">
          <option value="Objective" <%= question.type === "Objective" ? "selected" : "" %>>Objective</option>
          <option value="Subjective" <%= question.type === "Subjective" ? "selected" : "" %>>Subjective</option>
        </select>
      </div>

      <!-- Objective Options -->
      <div id="objectiveFields" class="<%= question.type === 'Subjective' ? 'hidden' : '' %>">
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div>
            <label class="block text-gray-700">Option A</label>
            <input name="optionA" class="w-full border rounded-lg px-3 py-2"
              value="<%= question.options ? question.options.A : '' %>" />
          </div>

          <div>
            <label class="block text-gray-700">Option B</label>
            <input name="optionB" class="w-full border rounded-lg px-3 py-2"
              value="<%= question.options ? question.options.B : '' %>" />
          </div>

          <div>
            <label class="block text-gray-700">Option C</label>
            <input name="optionC" class="w-full border rounded-lg px-3 py-2"
              value="<%= question.options ? question.options.C : '' %>" />
          </div>

          <div>
            <label class="block text-gray-700">Option D</label>
            <input name="optionD" class="w-full border rounded-lg px-3 py-2"
              value="<%= question.options ? question.options.D : '' %>" />
          </div>
        </div>

        <div class="mt-4">
          <label class="block text-gray-700 font-semibold mb-1">Correct Answer (A/B/C/D)</label>
          <input name="correctAnswer" class="w-full border rounded-lg px-3 py-2"
            value="<%= question.correctAnswer || '' %>" />
        </div>
      </div>

      <!-- Common Fields -->
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
        <div>
          <label class="block text-gray-700 font-semibold mb-1">Marks</label>
          <input type="number" name="marks" class="w-full border rounded-lg px-3 py-2"
            value="<%= question.marks || 0 %>" required />
        </div>

        <div>
          <label class="block text-gray-700 font-semibold mb-1">Time Limit (seconds)</label>
          <input type="number" name="timeLimit" class="w-full border rounded-lg px-3 py-2"
            value="<%= question.timeLimit || 30 %>" required />
        </div>
      </div>

      <div class="flex flex-col sm:flex-row justify-end sm:space-x-3 space-y-3 sm:space-y-0 mt-6">
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 text-center">
          Update Question
        </button>

        <a href="/recruiter/test/<%= test.id %>/add-questions"
          class="bg-gray-400 text-white px-6 py-2 rounded-lg hover:bg-gray-500 text-center">
          Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<script>
  // Toggle Objective field
  document.getElementById('questionType').addEventListener('change', function () {
    const objFields = document.getElementById('objectiveFields');
    objFields.classList.toggle('hidden', this.value === 'Subjective');
  });
</script>
