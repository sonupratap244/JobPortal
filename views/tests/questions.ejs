<%- include('../partials/header') %>
<%- include('../partials/sidebar', { user }) %>

<div class="p-6">
  <h2 class="text-2xl font-bold mb-4">Add Question to: <%= test.title %></h2>

  <form action="/tests/<%= test.id %>/questions/create" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
    <div>
      <label class="block font-semibold">Question Text</label>
      <textarea name="text" class="border p-2 rounded w-full" required></textarea>
    </div>

    <div>
      <label class="block font-semibold">Type</label>
      <select name="type" class="border p-2 rounded w-full" required>
        <option value="mcq">MCQ</option>
        <option value="text">Text</option>
      </select>
    </div>

    <div>
      <label class="block font-semibold">Options (for MCQ, comma separated)</label>
      <input type="text" name="options" class="border p-2 rounded w-full"/>
    </div>

    <div>
      <label class="block font-semibold">Correct Answer</label>
      <input type="text" name="correctAnswer" class="border p-2 rounded w-full"/>
    </div>

    <div>
      <label class="block font-semibold">Marks</label>
      <input type="number" name="marks" class="border p-2 rounded w-full"/>
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Create Question</button>
  </form>
</div>
