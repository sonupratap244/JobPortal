<%- include('../partials/header') %>
<%- include('../partials/sidebar') %>

<div class="p-6 max-w-3xl mx-auto">

  <h1 class="text-2xl font-bold mb-6">Edit Question</h1>

  <form action="/questions/update/<%= question.id %>" method="POST" class="space-y-4 bg-white p-6 rounded shadow">
    <div>
      <label class="block font-semibold mb-1">Question Text</label>
      <textarea name="text" required class="border p-2 rounded w-full"><%= question.text %></textarea>
    </div>

    <div>
      <label class="block font-semibold mb-1">Marks</label>
      <input type="number" name="marks" required value="<%= question.marks %>" class="border p-2 rounded w-full" />
    </div>

    <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Update Question</button>
  </form>

</div>
